{{#if collapse}}
<aside id="modifier-list" class="app gurps collapsed">
	<header>
		Current Modifiers
		<i class="fas fa-angle-up collapse-toggle"></i>
	</header>
</aside>
{{ else }}
<aside id="modifier-list" class="app gurps {{ hover }}" style="{{ bottom }}">
	<header>
		Current Modifiers
		<i class="fas fa-angle-down collapse-toggle"></i>
	</header>
	<div class="content">
		{{#each currentMods}}
		<button
			class="active {{#if (gt this.modifier 0)}}pos{{ else if (eq this.modifier 0) }}zero{{ else }}neg{{/if}}"
			data-index="{{@index}}"
		>
			<div>
				{{ signed this.modifier }} {{#if this.id}} :{{/if}} {{ this.id }} {{#if this.max}} {{localize
				"gurps.system.modifier_bucket.max" max=this.max}}{{/if}} {{#if this.cost }} {{modifierCost
				this.cost}}{{/if}}
			</div>
			<i class="gcs-trash"></i>
		</button>
		{{/each}}
	</div>
	{{#if targetMods}}
	<header>Current Target Modifiers</header>
	<div class="content">
		{{#each targetMods}}
		<button
			class="modifier {{#if (gt this.modifier 0)}}pos{{ else if (eq this.modifier 0) }}zero{{ else }}neg{{/if}}"
			data-modifier="{{ this.modifier }}"
			data-name="{{ this.id }}"
		>
			{{ signed this.modifier }} {{#if this.id}} :{{/if}} {{ this.id }} {{#if this.max}} {{localize
			"gurps.system.modifier_bucket.max" max=this.max}}{{/if}}
		</button>
		{{/each}}
	</div>
	{{/if}} {{#if actorMods}}
	<header>Current Character Modifiers</header>
	<div class="content">
		{{#each actorMods}}
		<button
			class="modifier {{#if (gt this.modifier 0)}}pos{{ else if (eq this.modifier 0) }}zero{{ else }}neg{{/if}}"
			data-modifier="{{ this.modifier }}"
			data-name="{{ this.id }}"
		>
			{{ signed this.modifier }} {{#if this.id}} :{{/if}} {{ this.id }} {{#if this.max}} {{localize
			"gurps.system.modifier_bucket.max" max=this.max}}{{/if}}
		</button>
		{{/each}}
	</div>
	{{/if}}
</aside>
{{/if}}
