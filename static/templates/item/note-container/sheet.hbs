<form class="{{cssClass}}" autocomplete="off">
	<div id="sheet">
		<div id="details">
			<label>{{localize "gurps.item.name"}}</label>
			<div class="field">
				<input type="text" name="name" value="{{item.name}}" data-dtype="String" />
			</div>
			<label>{{localize "gurps.item.notes"}}</label>
			<div class="field">
				<textarea type="text" name="system.text" data-dtype="String">{{{system.text}}}</textarea>
			</div>
			<label>{{localize "gurps.item.reference"}}</label>
			<div class="field">
				<input type="text" name="system.reference" value="{{system.reference}}" data-dtype="String" />
			</div>
			<label>{{localize "gurps.item.reference_highlight"}}</label>
			<div class="field">
					<input type="text" name="system.reference_highlight" value="{{system.reference_highlight}}" data-dtype="String" />
			</div>
			<div class="title">{{localize "gurps.item.markdown_preview"}}</div>
			<hr />
			<div class="md">{{{document.formattedText}}}</div>
		</div>
	</div>
</form>
