<li class="feature">
    <div class="top">
        <a class="button gcs-trash"
           data-action="remove-feature"
           data-index="{{@index}}"></a>
        <select class="type"
                name="array.system.features.{{@index}}.type"
                data-index="{{@index}}">
            {{#select this.type}}
            {{#each @root.config.select.feature_strict as |v k| }}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}}
            {{#if (eq @root.item.type "equipment_container") }}
                {{#each @rootconfig.select.feature as |v k| }}
                    <option value="{{ k }}">{{ localize v }}</option>
                {{/each}}
            {{/if}} {{/select}}
        </select>
        <div class="field">
            <input type="text"
                   name="array.system.features.{{@index}}.amount"
                   value="{{ signed this.amount false }}"
                   data-dtype="Number" />
        </div>
        <label class="check">
            <input
                type="checkbox"
                data-dtype="Boolean"
                name="array.system.features.{{@index}}.per_level"
                {{checked
                this.per_level}}
                />
                {{ localize "gurps.feature.per_level" }}
            </label>
        </div>
        <div class="field-3">
            <div class="placeholder"></div>
            <select name="array.system.features.{{@index}}.match">
                {{#select this.match}}
                {{#each @root.config.select.spellmatch as |v k|}}
                    <option value="{{ k }}">{{ localize v }}</option>
                {{/each}} {{/select}}
            </select>
            <select name="array.system.features.{{@index}}.name.compare" {{ disabled (eq this.match "all_colleges") }}>
                {{#select this.name.compare}}
                {{#each @root.config.select.string_criteria as |v k|}}
                    <option value="{{ k }}">{{ localize v }}</option>
                {{/each}} {{/select}}
            </select>
            <div class="field">
                <input type="text" name="array.system.features.{{@index}}.name.qualifier" value="{{ this.name.qualifier }}" data-dtype="String" {{ disabled (or (eq this.match "all_colleges") (eq this.name.compare "none")) }} />
            </div>
        </div>
        <div class="field-2">
            <div class="placeholder"></div>
            <select name="array.system.features.{{@index}}.tags.compare">
                {{#select this.tags.compare}}
                {{#each @root.config.select.string_criteria as |v k|}}
                    <option value="{{ k }}">{{ localize "gurps.field_prefix.tags" }} {{ localize v }}</option>
                {{/each}} {{/select}}
            </select>
            <div class="field">
                <input type="text" name="array.system.features.{{@index}}.tags.qualifier" value="{{ this.tags.qualifier }}" data-dtype="String" {{ disabled (eq this.tags.compare "none") }} />
            </div>
        </div>
    </li>
