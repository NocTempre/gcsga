<li class="feature">
	<div class="top">
		<a class="button gcs-trash" data-action="remove-feature" data-index="{{@index}}"></a>
		<select class="type" name="array.system.features.{{@index}}.type" data-index="{{@index}}">
			{{#select this.type}} {{#each @root.config.select.feature_strict as |v k| }}
			<option value="{{ k }}">{{ localize v }}</option>
			{{/each}} {{#if (eq @root.item.type "equipment_container") }} {{#each @root.config.select.feature as |v k|
			}}
			<option value="{{ k }}">{{ localize v }}</option>
			{{/each}} {{/if}} {{/select}}
		</select>
		<select name="array.system.features.{{@index}}.which">
			{{#select this.which}} {{#each @root.attributes as |v k|}}
			<option value="{{ k }}">{{ v }}</option>
			{{/each}} {{/select}}
		</select>
		<select name="array.system.features.{{@index}}.percentage">
			{{#select this.percentage}} {{#each @root.config.select.percentage as |v k|}}
			<option value="{{ k }}">{{ localize "gurps.field_prefix.percentage" value=v }}</option>
			{{/each}} {{/select}}
		</select>
	</div>
</li>
