<li class="prereq">
    <div class="top">
        <a class="button gcs-trash"
           data-action="remove-prereq"
           data-path="{{ path }}"></a>
        <select name="{{ path }}.has" data-dtype="Boolean">
            {{#select this.has}}
            {{#each @root.config.select.has as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <select class="type" name="{{ path }}.type" data-path="{{ path }}">
            {{#select this.type}}
            {{#each @root.config.select.prereq_strict as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
    </div>
    <div>
        <div class="placeholder"></div>
        <select name="{{ path }}.name.compare">
            {{#select this.name.compare}}
            {{#each @root.config.select.string_criteria as |v k|}}
                <option value="{{ k }}">{{ localize "gurps.field_prefix.name" }} {{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="{{ path }}.name.qualifier" value="{{ this.name.qualifier }}" data-dtype="String" {{ disabled (eq this.name.compare "none") }} />
        </div>
    </div>
    <div>
        <div class="placeholder"></div>
        <select name="{{ path }}.specialization.compare">
            {{#select this.specialization.compare}}
            {{#each @root.config.select.string_criteria as |v k|}}
                <option value="{{ k }}">{{ localize "gurps.field_prefix.specialization" }} {{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="{{ path }}.specialization.qualifier" value="{{ this.specialization.qualifier }}" data-dtype="String" {{ disabled (eq this.specialization.compare "none") }} />
        </div>
    </div>
    <div>
        <div class="placeholder"></div>
        <select name="{{ path }}.level.compare">
            {{#select this.level.compare}}
            {{#each @root.config.select.numeric_criteria as |v k|}}
                <option value="{{ k }}">{{ localize "gurps.field_prefix.level" }} {{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="{{ path }}.level.qualifier" value="{{ this.level.qualifier }}" data-dtype="Number" {{ disabled (eq this.level.compare "none") }} />
        </div>
    </div>
</li>
