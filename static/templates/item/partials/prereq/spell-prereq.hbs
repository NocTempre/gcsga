<li class="prereq">
		<input style="display: none;" name="system.prereqs.{{ this.index }}.id" value="{{this.id}}" data-dtype="String">
    <div class="top">
        <a class="button gcs-trash"
           data-action="remove-prereq"
           data-id="{{ this.id }}"></a>
        <select name="system.prereqs.{{ this.index }}.has" data-dtype="Boolean">
            {{#select this.has}}
            {{#each @root.config.select.has as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <select name="system.prereqs.{{ this.index }}.quantity.compare">
            {{#select this.quantity.compare}}
            {{#each @root.config.select.numeric_criteria_strict as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text"
                   name="system.prereqs.{{ this.index }}.quantity.qualifier"
                   value="{{ this.quantity.qualifier }}"
                   data-dtype="Number" />
        </div>
        <select class="type" name="system.prereqs.{{ this.index }}.type" data-id="{{ this.id }}">
            {{#select this.type}}
            {{#each @root.config.select.prereq_strict as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
    </div>
    <div class="spell-prereq">
        <div class="placeholder"></div>
        <select name="system.prereqs.{{ this.index }}.sub_type">
            {{#select this.sub_type}}
            {{#each @root.config.select.spellcmp as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <select name="system.prereqs.{{ this.index }}.qualifier.compare" {{ disabled (or (eq this.sub_type "college_count") (eq this.sub_type "any")) }}>
            {{#select this.qualifier.compare}}
            {{#each @root.config.select.string_criteria as |v k|}}
                <option value="{{ k }}">{{ localize v }}</option>
            {{/each}} {{/select}}
        </select>
        <div class="field">
            <input type="text" name="system.prereqs.{{ this.index }}.qualifier.qualifier" value="{{ this.qualifier.qualifier }}" data-dtype="String" {{ disabled (eq this.qualifier.compare "none") }} />
        </div>
    </div>
</li>
