<div class="item" data-index="{{@index}}" data-type="override">
	<div class="controls">
		<a class="gcs-grip drag" data-pindex="{{id}}" data-index="{{@index}}" data-type="move-type-override"></a>
		<a class="gcs-trash" data-pindex="{{id}}" data-index="{{@index}}" data-action="remove-move-type-override"></a>
	</div>
	<div class="fieldblock">
		<label>{{localize "gurps.move_type_def.condition_type"}}</label>
		<div class="field">
			<select
				name="system.settings.move_types.{{id}}.overrides.{{@index}}.condition.type"
				data-dtype="String"
			>
				{{#select this.condition.type}} {{#each @root.config.select.move_override as |v k|}}
				<option value="{{k}}">{{localize v}}</option>
				{{/each}} {{/select}}
			</select>
		</div>
		<label>{{localize "gurps.move_type_def.condition_qualifier"}}</label>
		<div class="field">
			<input
				type="text"
				name="{{parent}}.{{id}}.overrides.{{@index}}.condition.qualifier"
				value="{{this.condition.qualifier}}"
				data-dtype="String"
			/>
		</div>
		<label>{{localize "gurps.move_type_def.base"}}</label>
		<div class="field">
			<input
				type="text"
				name="{{parent}}.{{id}}.overrides.{{@index}}.base"
				value="{{this.base}}"
				data-dtype="String"
			/>
		</div>
	</div>
</div>
