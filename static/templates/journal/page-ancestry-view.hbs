{{#if data.title.show}}
<header class="journal-page-header">
	<h{{data.title.level}}>{{data.name}}</h{{data.title.level}}>
</header>
{{/if}}
<section class="journal-page-content">
	<!-- Common Options -->
	{{#with fields.common_options.fields as |fields|}}
	<p>
		<b>{{localize fields.height_formula.options.label}}:</b>
		{{@root.source.common_options.height_formula}}
	</p>

	<p>
		<b>{{localize fields.weight_formula.options.label}}:</b>
		{{@root.source.common_options.weight_formula}}
	</p>

	<p>
		<b>{{localize fields.age_formula.options.label}}:</b>
		{{@root.source.common_options.age_formula}}
	</p>

	{{/with}}
</section>
