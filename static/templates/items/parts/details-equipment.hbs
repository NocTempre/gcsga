<fieldset>
	<legend>{{localize "GURPS.Item.Equipment.DetailsLegend"}}</legend>

	<!-- Notes -->
	{{formField fields.notes value=source.notes localize=true}}

	<!-- Tech Level -->
	{{formField fields.tech_level value=source.tech_level localize=true}}

	<!-- Legality Class -->
	{{formField fields.legality_class value=source.legality_class localize=true}}

	<!-- Quantity / Equipped -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Equipment.FIELDS.Quantity.Name"}}</label>
		<div class="form-fields">
			<!-- Quantity -->
			{{formInput fields.quantity value=source.quantity}}

			<!-- Equipped -->
			<label>
				<!-- Input -->
				{{formInput fields.equipped value=source.equipped}}
				<!-- Label Contents -->
				{{localize "GURPS.Item.Equipment.FIELDS.Equipped.Name"}}
			</label>
		</div>
	</div>

	<!-- Value -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Equipment.FIELDS.Value.Name"}}</label>
		<div class="form-fields">
			{{formInput fields.value value=source.value}}
			<!-- Basic -->

			<!-- Label -->
			<label>{{localize "GURPS.Item.Equipment.FIELDS.Value.Extended"}}</label>
			<!-- Label Contents -->
			<input type="text" value="{{extendedValue}}" disabled />
		</div>
	</div>

	<!-- Weight -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Equipment.FIELDS.Weight.Name"}}</label>
		<div class="form-fields">
			{{formInput fields.weight value=source.weight}}
			<!-- Basic -->

			<!-- Label -->
			<label>{{localize "GURPS.Item.Equipment.FIELDS.Weight.Extended"}}</label>
			<!-- Label Contents -->
			<input type="text" value="{{extendedWeight}}" disabled />
		</div>
	</div>

	<!-- Tags -->
	{{formField fields.tags value=source.tags localize=true}}

	<!-- Reference -->
	{{formField fields.reference value=source.reference localize=true}}
</fieldset>
