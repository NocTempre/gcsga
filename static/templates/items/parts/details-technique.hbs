<fieldset>
	<legend>{{localize "GURPS.Item.Skill.DetailsLegend"}}</legend>

	<!-- Notes -->
	{{formField fields.notes value=source.notes localize=true}}

	<!-- Tags -->
	{{formField fields.tags value=source.tags localize=true}}

	<!-- Default -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Technique.FIELDS.Default.Name"}}</label>
		<div class="form-fields">
			<!-- Type -->
			{{formInput fields.default.fields.type value=source.default.type}}

			<!-- Only display these fields if defualt is skill-based -->
			{{#if system.default.skillBased}}
			<!-- Name -->
			{{formInput fields.default.fields.name value=source.default.name placeholder=(localize
			"GURPS.Item.Technique.FIELDS.Default.Skill") localize=true}}

			<!-- Specialization -->
			{{formInput fields.default.fields.specialization value=source.default.specialization placeholder=(localize
			"GURPS.Item.Technique.FIELDS.Default.Specialization") }}
			<!-- End If -->
			{{/if}}

			<!-- Modifier -->
			{{formInput fields.default.fields.modifier value=source.default.modifier }}
		</div>
	</div>
	<div class="form-group">
		<label></label>
		<div class="form-fields">
			<label>
				<!-- Input -->
				{{formInput fields.limited value=source.limited}}
				<!-- Label Contents -->
				{{localize "GURPS.Item.Technique.FIELDS.Limited.Name"}}
			</label>
			<!-- Cannot Exceed -->
			{{formInput fields.limit value=source.limit disabled=(not source.limited)}}
		</div>
	</div>

	<!-- Difficulty -->
	{{formField fields.difficulty.fields.difficulty value=source.difficulty.difficulty localize=true}}

	<!-- Points & Level -->
	{{#if item.isOwned}}
	<div class="form-group">
		<label>{{localize "GURPS.Item.Technique.FIELDS.Points.Name"}}</label>
		<div class="form-fields">
			<!-- Points -->
			{{formInput fields.points value=source.points}}

			<!-- Level -->
			<label>{{localize "GURPS.Item.Technique.FIELDS.Level.Name"}}</label>
			<input tabindex="-1" type="text" readonly value="{{levelField}}" />
		</div>
	</div>
	{{/if}}

	<!-- Reference -->
	{{formField fields.reference value=source.reference localize=true}}
</fieldset>
