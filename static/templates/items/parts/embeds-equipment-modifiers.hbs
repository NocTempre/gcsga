{{#* inline "item"}}
<li
	class="item"
	data-item-name="{{item.name}}"
	data-item-id="{{item.id}}"
	data-item-sort="{{item.sort}}"
	data-uuid="{{item.uuid}}"
	draggable="true"
>
	{{print item}} {{print system}}
	<div class="item-row">{{#each item.system.cellData as |cell key|}} {{cell.element}} {{/each}}</div>
	{{#if (eq item.type "equipmentModifierContainer")}}
	<ul class="item-list">
		{{#each item.children}} {{>item item=this}} {{/each}}
	</ul>
	{{/if}}
</li>
{{/inline}}

<div class="items-section" data-types="{{join system.modifierTypes ','}}">
	<div class="items-header">
		<i class="fa-solid fa-check item-header item-toggle"></i>
		<div class="item-header item-name">Equipment Modifier</div>
		<div class="item-header item-tech-level">TL</div>
		<div class="item-header item-cost-adjustment">Cost Adjustment</div>
		<div class="item-header item-weight-adjustment">Weight Adjustment</div>
		<div class="item-header item-controls"></div>
	</div>
	<ul class="item-list">
		{{#each system.modifiers}} {{> item item=this}} {{/each}}
	</ul>
</div>
