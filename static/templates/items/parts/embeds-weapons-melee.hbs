{{#* inline "item"}}
<li
	class="item"
	data-item-name="{{item.name}}"
	data-item-id="{{item.id}}"
	data-item-sort="{{item.sort}}"
	data-uuid="{{item.uuid}}"
	draggable="true"
>
	<div class="item-row">{{#each item.cellData as |cell key|}} {{cell.element}} {{/each}}</div>
</li>
{{/inline}}

<div class="inventory-list">
	<div class="items-header">
		<div class="item-header">Melee Weapon Usage</div>
		<div class="item-header">SL</div>
		<div class="item-header">Parry</div>
		<div class="item-header">Block</div>
		<div class="item-header">Damage</div>
		<div class="item-header">Reach</div>
		<div class="item-header">ST</div>
	</div>
	<ul class="item-list">
		{{#each system.itemTypes.weaponMelee}} {{> item item=this}} {{/each}}
	</ul>
</div>
