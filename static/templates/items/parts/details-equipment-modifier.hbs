<fieldset>
	<legend>{{localize "GURPS.Item.EquipmentModifier.DetailsLegend"}}</legend>

	<!-- Notes -->
	{{formField fields.notes value=source.notes localize=true editable=editable replacements=replacements}}

	<!-- Tech Level-->
	{{formField fields.tech_level value=source.tech_level localize=true editable=editable}}

	<!-- Enabled -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.EquipmentModifier.FIELDS.Enabled.Name"}}</label>
		<div class="form-fields">
			{{formInput fields.disabled value=(not source.disabled) name="system.enabled" editable=editable}}
		</div>
	</div>

	<!-- Cost -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.EquipmentModifier.FIELDS.CostModifier.Name"}}</label>
		<div class="form-fields">
			<!-- Cost Value-->
			{{formInput fields.cost value=source.cost editable=editable}}
			<!-- Cost Type -->
			{{formInput fields.cost_type value=source.cost_type localize=true editable=editable}}
			<label>
				<!-- Cost is per level -->
				{{formInput fields.cost_is_per_level value=source.cost_is_per_level editable=editable}}
				<!-- Label -->
				{{localize "GURPS.Item.EquipmentModifier.FIELDS.CostIsPerLevel.Name"}}
			</label>
		</div>
		<p class="hint">
			{{localize "GURPS.Enum.emcost.Example" value=(localize (concat "GURPS.Enum.emcost.Type." source.cost_type
			".Alt"))}}
		</p>
	</div>

	<!-- Weight -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.EquipmentModifier.FIELDS.WeightModifier.Name"}}</label>
		<div class="form-fields">
			<!-- Weight Value-->
			{{formInput fields.weight value=source.weight editable=editable}}
			<!-- Weight Type -->
			{{formInput fields.weight_type value=source.weight_type localize=true editable=editable}}
			<label>
				<!-- Weight is per level -->
				{{formInput fields.weight_is_per_level value=source.weight_is_per_level editable=editable}}
				<!-- Label -->
				{{localize "GURPS.Item.EquipmentModifier.FIELDS.WeightIsPerLevel.Name"}}
			</label>
		</div>
		<p class="hint">
			{{localize "GURPS.Enum.emweight.Example" value=(localize (concat "GURPS.Enum.emweight.Type."
			source.weight_type ".Alt"))}}
		</p>
	</div>

	<!-- Tags -->
	{{formField fields.tags value=source.tags localize=true editable=editable}}

	<!-- Reference -->
	{{formField fields.reference value=source.reference localize=true editable=editable}}
</fieldset>
