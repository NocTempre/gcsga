<fieldset>
	<legend>{{localize "GURPS.Item.Skill.DetailsLegend"}}</legend>

	<!-- Specialization -->
	{{formField fields.specialization value=source.specialization localize=true editable=editable}}

	<!-- Tech Level -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Skill.FIELDS.TechLevel.Name"}}</label>
		<div class="form-fields">
			<!-- Tech Level Number -->
			{{formInput fields.tech_level value=source.tech_level disabled=(not source.tech_level_required)
			editable=editable}}
			<!-- Tech Level Enabled -->
			<label>
				<!-- Input -->
				{{formInput fields.tech_level_required value=source.tech_level_required editable=editable}}
				<!-- Label Contents -->
				{{localize "GURPS.Item.Skill.FIELDS.TechLevelRequired.Name"}}
			</label>
		</div>
	</div>

	<!-- Notes -->
	{{formField fields.notes value=source.notes localize=true editable=editable}}

	<!-- Tags -->
	{{formField fields.tags value=source.tags localize=true editable=editable}}

	<!-- Difficulty -->
	<div class="form-group">
		<label>{{localize "GURPS.Item.Skill.FIELDS.Difficulty.Name"}}</label>
		<div class="form-fields">
			<!-- Attribute -->
			{{formInput fields.difficulty.fields.attribute value=source.difficulty.attribute editable=editable}}
			<!-- / -->
			<label>/</label>
			<!-- Difficulty -->
			{{formInput fields.difficulty.fields.difficulty value=source.difficulty.difficulty editable=editable}}
		</div>
	</div>

	<!-- Encumbrance Penalty -->
	{{formField fields.encumbrance_penalty_multiplier value=source.encumbrance_penalty_multiplier localize=true
	editable=editable}}

	<!-- Points & Level -->
	{{#if item.isOwned}}
	<div class="form-group">
		<label>{{localize "GURPS.Item.Skill.FIELDS.Points.Name"}}</label>
		<div class="form-fields">
			<!-- Points -->
			{{formInput fields.points value=source.points editable=editable}}

			<!-- Level -->
			<label>{{localize "GURPS.Item.Skill.FIELDS.Level.Name"}}</label>
			<input tabindex="-1" type="text" readonly value="{{levelField}}" />
		</div>
	</div>
	{{/if}}

	<!-- Reference -->
	{{formField fields.reference value=source.reference localize=true editable=editable}}
</fieldset>
