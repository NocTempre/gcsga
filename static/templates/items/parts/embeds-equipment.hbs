{{#* inline "item"}}
<li
	class="item"
	data-item-name="{{item.name}}"
	data-item-id="{{item.id}}"
	data-item-sort="{{item.sort}}"
	data-uuid="{{item.uuid}}"
	draggable="true"
>
	<div class="item-row">
		<!-- Cell Data -->
		{{#each item.cells as |cell key|}} {{cell.element}} {{/each}}
		<!-- Buttons -->
		<div class="item-detail item-controls">
			{{#each item.buttons as |button index|}} {{button.element}}{{/each}}
		</div>
	</div>
</li>
{{/inline}}

<div class="items-section" data-types="{{join system.childTypes ','}}">
	<div class="items-header">
		<div class="item-header item-quantity">#</div>
		<div class="item-header item-name">Name</div>
		<div class="item-header item-uses">Uses</div>
		<div class="item-header item-tech-level">TL</div>
		<div class="item-header item-legality-class">LC</div>
		<div class="item-header item-cost">
			<i class="fa-solid fa-coins"></i>
		</div>
		<div class="item-header item-cost-extended">
			<i class="fa-solid fa-layer-group"></i>
			<i class="fa-solid fa-coins"></i>
		</div>
		<div class="item-header item-weight">
			<i class="fa-solid fa-weight-hanging"></i>
		</div>
		<div class="item-header item-weight-extended">
			<i class="fa-solid fa-layer-group"></i>
			<i class="fa-solid fa-weight-hanging"></i>
		</div>
		<div class="item-header item-controls"></div>
	</div>
	<ul class="item-list">
		{{#each children}} {{> item item=this}} {{/each}}
	</ul>
</div>
